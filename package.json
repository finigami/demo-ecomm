{
  "name": "ecommerce-testbench",
  "version": "1.0.0",
  "description": "Ecommerce website for demonstrating unit testing and E2E testing",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:verbose": "concurrently \"npm run test:backend:verbose\" \"npm run test:frontend:verbose\"",
    "test:detailed": "concurrently \"npm run test:backend:detailed\" \"npm run test:frontend:detailed\"",
    "test:backend": "cd backend && npm test",
    "test:backend:verbose": "cd backend && npm run test",
    "test:backend:detailed": "cd backend && npm run test:detailed",
    "test:backend:coverage": "cd backend && npm run test:coverage",
    "test:frontend": "cd frontend && npm test",
    "test:frontend:verbose": "cd frontend && npm run test",
    "test:frontend:detailed": "cd frontend && npm run test:detailed",
    "test:frontend:coverage": "cd frontend && npm run test:coverage",
    "test:e2e": "cd e2e-tests && npm test",
    "test:e2e:ui": "cd e2e-tests && npm run test:ui",
    "test:e2e:headed": "cd e2e-tests && npm run test:headed",
    "test:all": "npm run test && npm run test:e2e",
    "setup": "npm run setup:backend && npm run setup:frontend && npm run setup:e2e",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    "setup:e2e": "cd e2e-tests && npm install",
    "setup:db": "./setup-database.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["ecommerce", "react", "nodejs", "testing"],
  "author": "Testbench",
  "license": "MIT"
}
